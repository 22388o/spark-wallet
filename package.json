{
  "name": "spark-wallet",
  "version": "0.0.1",
  "description": "A wallet GUI for c-lightning, accessible over the web or through mobile and desktop apps.",
  "bin": "dist/cli.js",
  "scripts": {
    "start": "./start.sh",
    "dist": "./build.sh",
    "postinstall": "test ! -d client || (cd client && npm install)",
