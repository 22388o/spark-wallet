.theme-slate  .navbar-brand .icon { left: -2px }
.theme-slate  .navbar-brand .icon:before { vertical-align: baseline }
.theme-lux    .navbar-brand .icon:before { vertical-align: text-top }
.theme-cosmo  .navbar-brand .icon:before { vertical-align: text-top }

.theme-slate .navbar-brand
  border-right 0

.theme-cyborg
  .input-group-text { color: #fff }

.theme-dark
  .alert
     border none

// these themes have space for a larger timestamp
.theme-yeti, .theme-dark, .theme-materia, .theme-lumen
  .feed .badge.ts
    font-size 100%
    margin-top 0

// explicitly style .main-bg with the theme's main background color
// when scanning QRs, so that it covers the QR video
body.qr-scanning
  .main-bg { background: #fff }
  .theme-dark .main-bg { background: #222 }
  .theme-simplex .main-bg { background: #FCFCFC }
  .theme-slate .main-bg { background: #272B30 }
  .theme-solar .main-bg { background: #002B36 }
  .theme-superhero .main-bg { background: #2B3E50 }
  .theme-cyborg .main-bg { background: #060606 }

// explicitly override hovered/focused/active list-group-item styles
.feed .list-group-item
  &.active
    .theme-cyborg & { background: #2A9FD6 }
    .theme-slate & { background: #3e444c }

  @media (hover:none)
    &:hover:not(.active)
      .theme-superhero & { background: #4E5D6C }
      .theme-cyborg & { background: #222  }
      .theme-dark & { background: #303030  }
      .theme-slate & { background: #32383e }
