    font-size 100%
    margin-top 0

.main-bg
  background #fff

  .theme-dark & { background: #222 }
  .theme-darkly & { background: #222 }
  .theme-simplex & { background: #FCFCFC }
  .theme-slate & { background: #272B30 }
  .theme-solar & { background: #002B36 }
  .theme-superhero & { background: #2B3E50 }
  .theme-cyborg & { background: #060606 }
