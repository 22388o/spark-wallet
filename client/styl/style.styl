@import 'nib'
@import 'loader'
@import 'icons'
@import 'tooltip'
@import 'theme-touchups'
@import 'qr'

// avoid FOUC before bootstrap loads
// (this is later overridden by bootstrap's css)
body
  font-size 0px

.btn, .form-control
  display none

// Layout
html, body, #app
  height 100%

#app > .flex-column
  min-height 100%

// Header, content & footer
.navbar-brand
  position relative

  .icon
    position absolute
    left -20px

    &:before
      vertical-align middle

.content
  flex 1
  position relative
  overflow-x hidden

footer
  font-size 65%

// Helpers
.flex-grow
  flex 1

.break-all
  word-break break-all

.disabled
  opacity 0.5
  pointer-events none

// Component
.alert
  font-size 0.9rem
  font-weight 400

// Homepage
.payments .badge
  font-size 100%

// Recv
img.qr
  width 100%
  max-width 300px

// Logs
.logs
  white-space pre-line

// Pay
.pastereq-btn-wrap
  position absolute
  bottom 0
  left -26px
  right -26px
  text-align center

  @media screen and (orientation: landscape)
    left 0
    right 0
    background transparent !important
