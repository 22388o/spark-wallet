{
  "name": "spark-wallet",
  "description": "A GUI wallet for c-lightning",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "./build.sh",
    "shipit": "./build.sh --publish always"
  },
  "author": "Nadav Ivgi <nadav@shesek.info>",
  "repository": "https://github.com/ElementsProject/spark",
  "license": "MIT",
  "devDependencies": {
    "electron": "^3.0.0-beta.1",
    "electron-builder": "^20.19.2"
  },
  "build": {
    "appId": "com.spark.wallet",
    "productName": "Spark",
    "files": [ "**/*", "!build.sh" ],
    "protocols": {
      "name": "Lightning Payment",
      "schemes": [
        "lightning"
      ]
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": "zip"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap",
        "tar.gz"
      ]
    }
  },
  "dependencies": {
    "electron-debug": "^2.0.0"
  }
}
