<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spark.wallet" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spark</name>
    <description>A wallet GUI for c-lightning</description>
    <author email="nadav@shesek.info" href="https://github.com/shesek">Nadav Ivgi</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="lightning" />
        <variable name="ANDROID_SCHEME" value=" " />
        <variable name="ANDROID_HOST" value=" " />
        <variable name="ANDROID_PATHPREFIX" value="/" />
    </plugin>
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <engine name="android" spec="7.1.0" />
</widget>
