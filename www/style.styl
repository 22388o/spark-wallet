@import('loader.styl')
@import('icons.styl')

// avoid FOUC before bootstrap loads
// (this is later overridden by bootstrap's css)
body
  font-size 0px
.btn, .form-control
  display none

html, body, #app
  height 100%

body
  margin 0

#app > .flex-column
  min-height 100%

.navbar-brand
  position relative

  .icon
    position absolute
    left -20px

    &:before
      vertical-align middle

footer
  font-size 65%

.flex-grow
  flex 1

.break-all
  word-break break-all

.disabled
  opacity 0.5
  pointer-events none


.alert
  font-size 0.9rem
  font-weight 400


.scanqr video
  width 100%

.payments .badge
  font-size 100%

.logs
  white-space pre-line

img.qr
  width 100%
  max-width 300px

.withtip
  position relative

  .tooltip
    position absolute
    bottom 100%
    left 50%
    transform translate(-50%, 10px)
    transform-origin top
    margin-bottom 1px
    transition all 0.18s ease-out 0.18s
    white-space nowrap
    z-index -1

    .arrow
      left 50%
      margin-left -0.4rem

  &:hover, &:focus
    .tooltip
      transform translate(-50%, 0)
      display inherit
      opacity 1
      z-index 1070

// theme touch-ups
.theme-slate   .navbar-brand .icon { left: -2px }
.theme-materia .navbar-brand .icon { left: -23px }
.theme-lux     .navbar-brand .icon:before { vertical-align: text-top }
.theme-cosmo   .navbar-brand .icon:before { vertical-align: text-top }
.theme-journal .navbar-brand .icon:before { vertical-align: baseline }
